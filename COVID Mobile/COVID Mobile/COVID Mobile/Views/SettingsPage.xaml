<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="COVID_Mobile.Views.SettingsPage"
             Title="Settings">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="10"/>
                <RowDefinition/>
                <RowDefinition Height="10"/>
                <RowDefinition/>
                <RowDefinition Height="10"/>
                <RowDefinition/>
                <RowDefinition Height="10"/>
                <RowDefinition/>
                <RowDefinition Height="10"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="15"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="Preferences_Button"
                    Text="GitHub Link"
                    TextColor="White"
                    FontSize="30"
                    FontAttributes="Bold"
                    Grid.Row="1"
                    Grid.Column="1"
                    CornerRadius="20"
                    Clicked="Preferences_Button_Clicked"/>
            <Button x:Name="SystemInfo_Button"
                    Text="System Info"
                    TextColor="White"
                    FontSize="30"
                    FontAttributes="Bold"
                    Grid.Row="3"
                    Grid.Column="1"
                    CornerRadius="20"
                    Clicked="SystemInfo_Button_Clicked"/>
            <Button x:Name="InsertData_Button"
                    Text="Insert Data"
                    TextColor="White"
                    FontSize="30"
                    FontAttributes="Bold"
                    Grid.Row="5"
                    Grid.Column="1"
                    CornerRadius="20"
                    Clicked="InsertData_Button_Clicked"/>
            <Button x:Name="ExportData_Button"
                    Text="Export Data"
                    TextColor="White"
                    FontSize="30"
                    FontAttributes="Bold"
                    Grid.Row="7"
                    Grid.Column="1"
                    CornerRadius="20"
                    Clicked="ExportData_Button_Clicked"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>